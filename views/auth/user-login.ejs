<%- include('../includes/page-head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/page-navigation.ejs') %>
    <main>
        <div class="container mt-3">
            <div class="row">
                <div class="col col-md-3 col-lg-4"></div>
                <div class="col-10 col-md-6 col-lg-4">
                    <p class="text-center">Đăng Nhập</p>
                </div>
                <div class="col col-md-3 col-lg-4"></div>
            </div>

            <div class="row">
                <div class="col col-md-3 col-lg-4"></div>
                <div class="col-10 col-md-6 col-lg-4">
                    <form class="staff-form" action="/login" method="POST">
                        <div class="mt-3 mb-3">
                            <label class="form-label" for="email">Email: </label>
                            <input 
                                class="form-control <%= validationErrors.filter(e => e.param === 'email')[0] === undefined ? '' : 'red-border'%>" 
                                type="text" 
                                name="email" 
                                id="emails" 
                                value="<%= oldInput === null ? '' :  oldInput.email %>" 
                                >
                            <% if (validationErrors.filter(e => e.param === "email")[0]) { %> 
                                <p class="alert-danger text-center"><%= validationErrors.filter(e => e.param === "email")[0].msg; %></p>
                            <% } %>
                        </div>
                        <div class="mt-3 mb-3">
                            <label class="form-label"  for="password">Mật khẩu: </label>
                            <input 
                                class="form-control <%= validationErrors.filter(e => e.param === 'password')[0] === undefined ? '' : 'red-border'%>" 
                                type="password" 
                                name="password" 
                                id="password" 
                                value=""
                                >
                            <% if (validationErrors.filter(e => e.param === "password")[0]) { %> 
                                <p class="alert-danger text-center"><%= validationErrors.filter(e => e.param === "password")[0].msg; %></p>
                            <% } %>
                        </div>
                        <div class="text-center">
                            <a href="/reset">Thay đổi mật khẩu</a>
                        </div>
                        <div class="text-center mt-3">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn-primary" type="submit">Đăng Nhập</button>
                        </div>
                    </form>
                </div>
                <div class="col col-md-3 col-lg-4"></div>
            </div>
        </div>
    </main>
    
<%- include('../includes/page-end.ejs') %>