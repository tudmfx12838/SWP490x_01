<%- include('../includes/page-head.ejs') %>

</head>

<body>
   <%- include('../includes/page-navigation.ejs') %>
    <main class="container">

        <div class="row">
            <div class="text-center">
                <h1>Quản Lý Sự Kiện</h1>
            </div>
        </div>

        <div class="row">
            <div class="toolbar">
                <button id="btn-add" class="btn-toolbar btn btn-success" data-bs-toggle="modal" data-bs-target="#addItemModal">+</button>
                <button id="btn-delete" class="btn-toolbar btn btn-danger"> x </button>
            </div>
        </div>
        <!-- title: "Mừng ngày 30/4/2021",
        startDate: new Date("2021-04-30T00:00:00.000+00:00"),
        endDate: new Date("2021-05-01T00:00:00.000+00:00"),
        hasCoupon: false,
        coupon: "",
        description: "Mừng ngày 30/4/2021 giảm 10% khi mua hàng online(30/04/2021 ~ 01/05/2021)",
        imageUrl: "images\/mung30042021.jpg" -->
        <div class="row">
            <table 
            id="table" 
            data-click-to-select="true"
            data-pagination="true"
            data-show-columns="true"
            data-show-columns-toggle-all="true"
            data-search="true"
            data-toolbar=".toolbar"
            >
            <thead>
                <tr>
                <th data-field="state" data-checkbox="true"></th>
                <th data-field="_id" data-visible="false">Mã SK</th>
                <th data-field="title">Tên SK</th>
                <th data-field="startDate">Ngày bắt đầu</th>
                <th data-field="endDate">Ngày kết thúc</th>
                <th data-field="hasCoupon" data-visible="false">Có Mã KM</th>
                <th data-field="coupon" >Mã KM</th>
                <th data-field="discount" data-visible="false">Giảm giá %</th>
                <th data-field="description" data-visible="false">Mô tả</th>
                <th data-field="imageUrl" data-visible="false">Ảnh</th>
                <th data-field="action" data-width="150" data-formatter="actionEditEvent" data-events="actionEditEventEvents">Action</th>
                </tr>
            </thead>
            </table>
        </div>

        <div class="row">
            <div id="addItemModal" class="modal" data-bs-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Thêm Sự Kiện Mới</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form class="product-form"  action="/admin/manage/add-event/" method="POST" enctype="multipart/form-data">
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="title">Tên SK: </label>
                                    <input class="form-control" type="text" name="title" id="title" value="" placeholder="Nhập tên sự kiện" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="startDate">Ngày bắt đầu: </label>
                                    <input class="form-control" type="date" name="startDate" id="startDate" value="" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="endDate">Ngày kết thúc: </label>
                                    <input class="form-control" type="date" name="endDate" id="endDate" value="" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="hasCoupon">Có mã giảm giá? </label>
                                    <input type="checkbox" id="hasCoupon_cbx" name="hasCoupon_cbx" value="">
                                    <input type="hidden" id="hasCoupon" name="hasCoupon" value="false">
                                    <input type="text" id="coupon" name="coupon" value="" placeholder="Nhập mã giảm giá">
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="title">Giảm giá(vd: 15% thì điền 0.15): </label>
                                    <input class="form-control" type="number" name="discount" id="discount" value="" step="0.01" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="description">Mô tả: </label>
                                    <textarea class="form-control" name="description" id="description" value="" required></textarea>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="image">Ảnh: </label>
                                    <input class="form-control"
                                        type="file" 
                                        name="image" 
                                        id="image" 
                                        required
                                    >
                                </div>
                                <input type="hidden" name="_csrf">
                                <button class="btn btn-primary" type="submit">Thêm</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div id="confirmDeleteItemModal" class="modal" data-bs-backdrop="static">
                <div class="modal-dialog modal-md">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Xác Nhận Xóa Sự Kiện</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form class="product-form"  action="/admin/manage/delete-event/?delete=true" method="POST">
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="title">Tên sự kiện: </label>
                                    <span name="title" class="title"></span>
                                    <input type="hidden" name="title" id="title">
                                </div>
                                
                                <input type="hidden" name="_id" id="_id" val="">
    
                                <input type="hidden" name="_csrf">
                                <button class="btn btn-primary" type="submit">Xóa</button>
                                <button type="button" id="btn-cancel" class="btn btn-danger" data-bs-dismiss="modal">Hủy</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div id="editItemModal" class="modal" data-bs-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Cập nhật Sản Phẩm</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="form-editItemModal" class="product-form"  action="/admin/manage/edit-event/?edit=true" method="POST" enctype="multipart/form-data">
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="title">Tên SK: </label>
                                    <input class="form-control" type="text" name="title" id="title" value="" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="startDate">Ngày bắt đầu: </label>
                                    <input class="form-control" type="date" name="startDate" id="startDate" value="" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="endDate">Ngày kết thúc: </label>
                                    <input class="form-control" type="date" name="endDate" id="endDate" value="" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="hasCoupon">Có mã giảm giá? </label>
                                    <input type="checkbox" id="hasCoupon_cbx" name="hasCoupon_cbx" value="">
                                    <input type="hidden" id="hasCoupon" name="hasCoupon" value="">
                                    <input type="text" id="coupon" name="coupon" value="" placeholder="Nhập mã giảm giá">
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="title">Giảm giá(vd: 15% thì điền 0.15): </label>
                                    <input class="form-control" type="number" name="discount" id="discount" value="" step="0.01" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="description">Mô tả: </label>
                                    <textarea class="form-control" name="description" id="description" value="" required></textarea>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="image">Ảnh: </label>
                                    <input class="form-control"
                                        type="file" 
                                        name="image" 
                                        id="image" 
                                    >
                                </div>
    
                                <input type="hidden" name="_id" id="_id" val="">
                                
                                <button type="button" id="btn-confirmEditItem" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmEditItemModal">Xác nhận</button>
                                <!-- <button class="btn btn-primary" type="submit">Cập nhật</button> -->
                                <button type="button" id="btn-cancel" class="btn btn-danger" data-bs-dismiss="modal">Hủy</button>    
                            </form> 
                        </div>
                    </div>
                </div>
            </div>

            <div id="confirmEditItemModal" class="modal" data-bs-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Xác Nhận Cập nhật Sự Kiện</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="title">Tên sự kiện: </label>
                                <span name="title" class="title"></span>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="startDate">Ngày bắt đầu: </label>
                                <span name="startDate" class="startDate"></span>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="endDate">Ngày kết thúc: </label>
                                <span name="endDate" class="endDate"></span>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="hasCoupon">Có mã giảm giá?: </label>
                                <span name="hasCoupon" class="hasCoupon"></span>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="coupon">Mã giảm giá: </label>
                                <span name="coupon" class="coupon"></span>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="discount">Mã giảm giá: </label>
                                <span name="discount" class="discount"></span>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="description">Mô tả: </label>
                                <span name="description" class="description"></span>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="fw-bold form-label" for="image">Ảnh: </label>
                                <span name="image" class="image"></span>

                            </div>
                            <input type="hidden" name="_id" id="_id" val="">

                            <input type="hidden" name="_csrf">
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editItemModal" role="button">Trở về</button>
                            <button type="button" id="btn-submitConfirmEditItem" class="btn btn-primary">Cập nhật</button>
                            <button type="button" id="btn-cancel" class="btn btn-danger" data-bs-dismiss="modal">Hủy</button>
                        
                        </div>
                    </div>
                </div>
            </div>

            <div id="detailItemModal" class="modal fade" data-bs-backdrop="static" >
                <div class="modal-dialog modal-md">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Chi Tiết Sự Kiện</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                                <div class="mb-3 mt-3">
                                    <img name="image" id="imageUrl" class="mh-200" style="width: 150px; height: 200px" src="" alt="">
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="title">Tên sự kiện: </label>
                                    <span name="title" class="title"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="startDate">Ngày bắt đầu: </label>
                                    <span name="startDate" class="startDate"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="endDate">Ngày kết thúc: </label>
                                    <span name="endDate" class="endDate"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="hasCoupon">Có mã giảm giá?: </label>
                                    <span name="hasCoupon" class="hasCoupon"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="coupon">Mã giảm giá: </label>
                                    <span name="coupon" class="coupon"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="discount">Mã giảm giá: </label>
                                    <span name="discount" class="discount"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="fw-bold form-label" for="description">Mô tả: </label>
                                    <span name="description" class="description"></span>
                                </div>

                                <input type="hidden" name="_id" id="_id" val="">
    
                                <input type="hidden" name="_csrf">
                                <button type="button" id="btn-editItem" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#editItemModal" >Sửa</button>
                                <button type="button" id="btn-cancel" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

   <script id="admin-events-page" src="/js/script-admin-events.js" events-data='<%- JSON.stringify(events) %>'></script>

   <%- include('../includes/page-end.ejs') %>