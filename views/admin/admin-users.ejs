                                        <% if (addUserValidationErrors.filter(e => e.param === "permission")[0]) { %> 
                                            <p class="alert-danger text-center"><%= addUserValidationErrors.filter(e => e.param === "point")[0].msg; %></p>
                                        <% } %>
