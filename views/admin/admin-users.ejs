                                        class="form-control <%= addUserValidationErrors.filter(e => e.param === 'email')[0] === undefined ? '' : 'red-border'%>" 
                                        type="email" 
                                        name="email" 
                                        id="email" 
                                        value="<%= oldAddUserValue === null ? '' :  oldAddUserValue.email %>" 
                                        required>
