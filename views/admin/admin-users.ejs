                                        class="form-control <%= addUserValidationErrors.filter(e => e.param === 'phoneNumber')[0] === undefined ? '' : 'red-border'%>" 
                                        type="tel" 
                                        name="phoneNumber" 
                                        id="phoneNumber" 
